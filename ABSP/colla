def collatz(num):
    while num != 1:
        if num % 2 == 0:
            num = num//2
            print(num)
            #return num
        elif num % 2 == 1:
            num = 3*num +1
            print(num)
try:
    print('number= ')
    collatz(int(input()))
except ValueErrot:
    print('number invalid')
